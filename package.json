{
  "name": "source-verify",
  "version": "1.0.0",
  "description": "Solidity metadata-based re-compilation and source verification tool",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethereum/source-verify.git"
  },
  "scripts": {
    "test": "TESTING=true mocha",
    "coverage": "node ./node_modules/nyc/bin/nyc.js --reporter=lcov --reporter=text-summary ./node_modules/tape/bin/tape ./test/index.js",
    "coveralls": "npm run coverage && node ./node_modules/coveralls/bin/coveralls.js <coverage/lcov.info",
    "localchain": "./localchain.js",
    "dev": "npm run build:ui && ./run.sh 80 repository db",
    "dev:ui": "cd ./ui/ && npm install && npm start",
    "dev:server": "npm run build:ui && ./run_server.sh",
    "dev:server:local": "npm run build:ui && TESTING=true ./run_server.sh",
    "build:ui": "cd ./ui/ && npm install && npm run build"
  },
  "keywords": ["ethereum", "solidity", "verification", "bytecode", "metadata"],
  "files": ["index.js"],
  "author": "chriseth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ethereum/source-verify/issues"
  },
  "homepage": "https://github.com/ethereum/source-verify#readme",
  "dependencies": {
    "cbor": "^4.3.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6-alpha.6",
    "html": "^1.0.0",
    "multihashes": "^0.4.15",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "serve-index": "^1.9.1",
    "solc": "^0.6.1",
    "web3": "^1.2.1"
  },
  "devDependencies": {
    "@0x/sol-compiler": "^4.0.3",
    "ganache-cli": "^6.8.2",
    "ipfs-unixfs": "^0.3.0",
    "ipld-dag-pb": "^0.18.2",
    "mocha": "^7.0.0",
    "pify": "^4.0.1"
  }
}
